<Page
    x:Class="ChineseCheckers.GameBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" >
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/Images/swamp-dark.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4,5*"/>
        </Grid.ColumnDefinitions>-->
        <Grid Grid.Column="1">
            <canvas:CanvasAnimatedControl x:Name="canvas" Draw="canvas_Draw" CreateResources="canvas_CreateResources" PointerPressed="canvas_Click" Update="canvas_Update"/>
            <Button x:Name="MainMenu" Content="Main Menu" Margin="850,700,0,0" HorizontalAlignment="Center" Height="60" Width="250" FontFamily="Algerian" FontSize="40" FontWeight="Bold" CornerRadius="10" Click="MainMenu_Click" Background="ForestGreen" BorderBrush="#FFF" BorderThickness="4" />

        </Grid>
    </Grid>
</Page>